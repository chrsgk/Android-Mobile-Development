<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    tools:context=".Servicios">

    <WebView
        android:id="@+id/Services"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"/>

    <Button
        android:id="@+id/Btn5"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/Services"
        android:backgroundTint="@color/orange"
        android:text="@string/title5"
        android:textSize="15sp"
        android:layout_weight=".25"/>

    <Button
        android:id="@+id/Btn14"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignRight="@id/Services"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="291dp"
        android:layout_marginBottom="651dp"
        android:backgroundTint="@color/green"
        android:text="@string/title10"
        android:layout_weight=".25"/>

</RelativeLayout>